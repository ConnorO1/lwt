- $page_title = 'Home';

- if ( $langcnt == 0 )
  %table(class="tab3" cellspacing="1" cellpadding="5")
    %tr
      %th.th1
        :markdown
          Hint: The database seems to be empty.
          [You may install the LWT demo database,](install_demo.php) or
          [define the first language you want to learn.](edit_languages.php?new=1)

:javascript
  if ( !areCookiesEnabled() )
      document.write('<p class="red">*** Cookies are not enabled! Please enable! ***</p>');

- if ( $langcnt > 0 )
  %ul
    %li
      Language:
      %select#filterlang(onchange="setLang(document.getElementById('filterlang'), 'index.php');")
        = get_languages_selectoptions($currentlang, '[Select...]')

  - if ( $currenttext != '' && isset($txttit) )
    %ul
      %li
        My last Text (in #{$lngname}):
        %br
        %em= $txttit

        %a(href="do_text.php?start=#{$currenttext}")
          %img(src="icn/book-open-bookmark.png" title="Read" alt="Read")
          &nbsp;Read

        %a(href="do_test.php?text=#{$currenttext}")
          %img(src="icn/question-balloon.php" title="Test" alt="Test")
          &nbsp;Test

        %a(href="print_text.php?text=#{$currenttext}")
          %img(src="icn/printer.png" title="Print" alt="Print")
          &nbsp;Print

